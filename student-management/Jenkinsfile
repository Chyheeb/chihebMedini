pipeline {
    agent any

    stages {
        stage('Checkout from Git') {
            steps {
                git branch: 'master',
                    url: 'https://github.com/Chyheeb/timesheet-devops.git'
            }
        }

        stage('Build with Maven') {
            steps {
                dir('student-management') {
                    sh 'mvn -version'
                    sh 'mvn clean install -DskipTests'
                }
            }
        }
    }
}

